[core]
        quotepath = off
        pager = delta
[include]
        path = ~/.gitconfig.local
[commit]
        gpgsign = true
[tag]
        gpgSign = true
[pull]
        rebase = true
[push]
        default = current
[fetch]
        prune = true
[interactive]
        diffFilter = delta --color-only
[delta]
        navigate = true
        features = side-by-side line-numbers decorations
        whitespace-error-style = 22 reverse
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
	markIgnoredLines = true
